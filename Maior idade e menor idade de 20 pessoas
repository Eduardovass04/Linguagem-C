#include <stdio.h>

int main(){
    int i;
    int maior,menor;
    float media;
    int idade,soma;

    soma=0;
    maior=-111111;
    menor=9999999;

    for(i=1;i<=20; i++){
   printf("informe a sua idade:\n");
   scanf("%d", &idade);

        if(idade>maior){
            maior=idade;
        }

        if(idade<menor){
            menor=idade;
        }
     soma=soma+idade;
    }
    
        media=soma/20;

        printf("Maior idade:%d\n", maior);
        printf("Menor idade:%d\n", menor);
        printf("Media:%2.f\n", media);
 
        return 0;
}
